<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/beige</item>
        <item name="android:windowBackground">@drawable/fond_clair</item>
        <item name="isLightTheme">true</item>
    </style>

    <!-- Dark Theme -->
    <style name="Base.Theme.MyApplication.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/fond_dark</item>

        <item name="isLightTheme">false</item>
    </style>

    <!-- Thème par défaut -->
    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <!-- Thème avec fond transparent -->
    <style name="Theme.MyApplication.TransparentBars" parent="Theme.MyApplication">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>